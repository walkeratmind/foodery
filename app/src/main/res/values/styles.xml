<resources>

    <!--    CUSTOM STYLES   -->


    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/padding_regular</item>
        <item name="background">@drawable/btn_selector</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="textViewStyle" parent="Widget.AppCompat.TextView">

    </style>

    <style name="titleTextStyle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="titleTextStyleWhite">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="priceTagTextView">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>