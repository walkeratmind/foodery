<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:statusBarColor">@color/primaryColor</item>

        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>

    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowContentOverlay">@color/colorWhite</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!--    CUSTOM STYLES   -->
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/padding_regular</item>
        <item name="background">@drawable/btn_selector</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="textViewStyle" parent="Widget.AppCompat.TextView">

    </style>

    <style name="titleTextStyle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="titleTextStyleWhite">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="priceTagTextView">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>